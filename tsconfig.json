{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react-native",
    "strict": true,
    "skipLibCheck": true,

    "paths": {
      "@assets/*": ["assets/*"],
      "@navigations/*": ["navigations/*"],
      "@components/*": ["components/*"],
      "@context/*": ["context/*"],
      "@screens/*": ["screens/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src", "index.js"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
